<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="plateCode"
                  type="String"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <EditText
                android:hint="Bulmak İstediğiniz Plaka Kodunu Girin"
                android:layout_width="411dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/iPlate"
                android:textColor="?attr/actionModeSplitBackground" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:textSize="25sp"
                android:text="Bul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/findButton"
                app:layout_constraintEnd_toEndOf="@+id/iPlate"
                app:layout_constraintStart_toStartOf="@+id/iPlate" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/iPlate"/>
        <TextView
                android:textSize="25sp"
                android:text="Şehir Adı"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/findButton" app:layout_constraintEnd_toEndOf="@+id/findButton"
                app:layout_constraintStart_toStartOf="@+id/findButton"
                android:textColor="?attr/actionModeSplitBackground"/>
        <TextView
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@{plateCode}"
                android:id="@+id/cityName"
                android:textColor="?android:attr/colorEdgeEffect"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintHorizontal_bias="0.484" app:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginTop="32dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>